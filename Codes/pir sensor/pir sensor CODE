// Définir les broches pour le capteur de mouvement et le buzzer
#define MOUVEMENT_PIN 11
#define BUZZER_PIN 10

void setup() {
  // Initialiser les broches du capteur de mouvement et du buzzer comme sorties ou entrées selon le cas
  pinMode(MOUVEMENT_PIN, INPUT);
  pinMode(BUZZER_PIN, OUTPUT);

  // Initialiser la communication série avec le moniteur série
  Serial.begin(9600);
}

void loop() {
  // Vérifier si un signal est détecté par le capteur de mouvement
  if (digitalRead(MOUVEMENT_PIN) == HIGH) {
    // Faire sonner le buzzer
    digitalWrite(BUZZER_PIN, HIGH);
  }
  else {
    // Arrêter le buzzer
    digitalWrite(BUZZER_PIN, LOW);
  }
}

