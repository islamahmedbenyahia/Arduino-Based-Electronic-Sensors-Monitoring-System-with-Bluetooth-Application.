// Définir les broches pour le capteur de flamme et le buzzer
#define FLAMME_PIN 5
#define FLAMME_ANALOG A1
#define BUZZER_PIN 10

// Déclarer une variable pour stocker la valeur du capteur de flamme
int flamme = 0;

// Déclarer une variable pour stocker le seuil de détection de la flamme
int seuil = 500;

void setup() {
  // Initialiser les broches du capteur de flamme et du buzzer comme sorties ou entrées selon le cas
  pinMode(FLAMME_PIN, INPUT);
  pinMode(BUZZER_PIN, OUTPUT);

  // Initialiser la communication série avec le moniteur série
  Serial.begin(9600);
}

void loop() {
  // Lire la valeur du capteur de flamme
  flamme = analogRead(FLAMME_ANALOG);

  // Afficher la valeur du capteur de flamme sur le moniteur série
  Serial.println(flamme);

  // Vérifier si la valeur du capteur de flamme dépasse le seuil
  if (flamme > seuil) {
    // Faire sonner le buzzer
    digitalWrite(BUZZER_PIN, HIGH);
  }
  else {
    // Arrêter le buzzer
    digitalWrite(BUZZER_PIN, LOW);
  }
}


