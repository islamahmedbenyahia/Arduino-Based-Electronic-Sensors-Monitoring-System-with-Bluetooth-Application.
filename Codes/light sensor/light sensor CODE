// Définir les broches pour le capteur de lumière et le buzzer
#define LUMIERE_PIN 5
#define BUZZER_PIN 10

// Déclarer une variable pour stocker la valeur du capteur de lumière
int lumiere = 0;

// Déclarer une variable pour stocker le seuil de détection de la lumière
int seuil = 500;

void setup() {
  // Initialiser la broche du buzzer comme sortie
  pinMode(BUZZER_PIN, OUTPUT);

  // Initialiser la communication série avec le moniteur série
  Serial.begin(9600);
}

void loop() {
  // Lire la valeur du capteur de lumière
  lumiere = analogRead(LUMIERE_PIN);

  // Afficher la valeur du capteur de lumière sur le moniteur série
  Serial.println(lumiere);

  // Vérifier si la valeur du capteur de lumière dépasse le seuil
  if (lumiere > seuil) {
    // Faire sonner le buzzer
    digitalWrite(BUZZER_PIN, HIGH);
  }
  else {
    // Arrêter le buzzer
    digitalWrite(BUZZER_PIN, LOW);
  }
}

